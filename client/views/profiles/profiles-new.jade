h3(ng-hide='isEdit') NEW USER
h3(ng-show='isEdit') EDIT USER

.row
  .col-xs-12
    h4: i.fa.fa-user-plus &nbsp; BASIC INFO
  .col-xs-12.col-sm-4
    .form-group
      label: h6(for='firstName') First Name
      input.form-control#firstName(type='text', ng-model='student.firstName')
    .form-group
      label: h6(for='lastName') Last Name 
      input.form-control#lastName(type='text', ng-model='student.lastName')
    .form-group
      label: h6(for='website') Website
      input.form-control#website(type='url', ng-model='student.website')
  .col-xs-12.col-sm-4
    .form-group
      label: h6(for='phone') Phone
      input.form-control#phone(type='tel', ng-model='student.phone')
    .form-group
      label: h6(for='github') GitHub
      input.form-control#github(type='url', ng-model='student.github')
    .form-group
      label: h6(for='stackoverflow') StackOverflow
      input.form-control#stackoverflow(type='url', ng-model='student.stackoverflow')
  .col-xs-12.col-sm-4
    .form-group
      label: h6(for='linkedin') LinkedIn
      input.form-control#linkedin(type='url', ng-model='student.linkedin')
    .form-group
      label: h6(for='twitter') Twitter
      input.form-control#github(type='url', ng-model='student.twitter')
    .form-group
      label: h6(for='email') Email
      input.form-control#email(type='email', ng-model='student.email')
.row
  .col-xs-12
    h4: i.fa.fa-map-marker &nbsp; LOCATION PREFERENCES
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='location') Location
      input.form-control#location(type='text', ng-model='student.location')
    .form-group
      label: h6(for='preferedLocation1') First Preferred Location
      select.form-control#preferedLocation1(type='text', ng-model='student.preferedLocation.preferedLocation1')
        option(ng-repeat='place in msa' value='{{place}}') {{place}}
    .form-group
      label: h6(for='preferedLocation2') Second Preferred Location
      select.form-control#preferedLocation2(ng-model='student.preferedLocation.preferedLocation2')
        option(ng-repeat='place in msa', value='{{place}}') {{place}}
    .form-group
      label: h6(for='preferedLocation3') Third Perferred Location
      select.form-control#preferedLocation1(type='text', ng-model='student.preferedLocation.preferedLocation3')
        option(ng-repeat='place in msa') {{place}}
  .col-xs-4.col-sm-2
    .form-group
      label: h6(for='relocation') Willing to relocate?
      input.form-control#relocation(type='checkbox', ng-model='student.relocation')
  .col-xs-4.col-sm-2
    .form-group
      label: h6(for='remoteWorking') Willing to work remotely?
      input.form-control#remoteWorking(type='checkbox', ng-model='student.remoteWorking')
  .col-xs-4.col-sm-2
    .form-group
      label: h6(for='forHire') Available for hire?
      input.form-control#forHire(type='checkbox', ng-model='student.forHire')
  .col-xs-12.col-sm-6
    .form-group Three sentences that sum you up
      label: h6(for='blurb')
      textarea.form-control#remoteWorking(type='textarea', ng-model='student.blurb')
    .form-group Photo
      label: h6(for='photo')
      input.form-control#photo(type='file', ng-model='student.photo' base-sixty-four-input)
    .form-group
      img#photoView(base-sixty-four-image="student.photo")
.row
  .col-xs-12
    h4: i.fa.fa-bicycle &nbsp; HOBBIES AND INTERESTS
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='interests1') Hobby/Interest
      input.form-control#interests1(type='text', ng-model='student.interests.interest1')
    .form-group
      label: h6(for='interests2') Hobby/Interest
      input.form-control#interests2(type='text', ng-model='student.interests.interest2')
    .form-group
      label: h6(for='interests3') Hobby/Interest
      input.form-control#interests3(type='text', ng-model='student.interests.interest3')
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='interests4') Hobby/Interest
      input.form-control#interests4(type='text', ng-model='student.interests.interest4')
    .form-group
      label: h6(for='interests5') Hobby/Interest
      input.form-control#interests5(type='text', ng-model='student.interests.interest5')
.row
  .col-xs-12
    h4: i.fa.fa-suitcase &nbsp;SKILLS AND EXPOSURE
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='skills') Skills
      textarea.form-control#skills(type='textarea', ng-model='student.skills', ng-keyup="$event.keyCode == 13 ? submit(user) : null")
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='education') Education
      textarea.form-control#education(type='textarea', ng-model='student.education', ng-keyup="$event.keyCode == 13 ? submit(user) : null")
  .col-xs-12.col-sm-6
    .form-group
      label: h6(for='exposure') Exposure
      textarea.form-control#exposure(type='textarea', ng-model='student.exposure', ng-keyup="$event.keyCode == 13 ? submit(user) : null")
  .col-xs-12.col-sm-6
    .form-group(ng-hide='isEdit')
      button.btn.btn-success.login#createUser(ng-click='create(student)') Create Developer
    .form-group(ng-show='isEdit')
      button.btn.btn-success.login#createUser(ng-click='edit(user)') Save Edit
